using System;
using System.Collections.Generic;
using System.Linq;
using System.Security.Cryptography;
using System.Text;
using System.Threading.Tasks;

namespace RandomNumber
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int number = 0;
            int numberMultiplicity3 = 3;
            int numberMultiplicity5 = 5;
            int sum = 0;

            int minRandom = 0;
            int maxRandom = 100;
            Random rand = new Random();
            
            number = rand.Next(minRandom, maxRandom + 1);

            for (int i = 0; i <= number; i++)
            {
                if(i % numberMultiplicity3 == 0 || i % numberMultiplicity5 == 0)
                sum += i;
            }

            Console.WriteLine($"Ваше число: {number}, сумма чисел кратных {numberMultiplicity5} или {numberMultiplicity3} равна {sum}.");
        }
    }
}
