using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace MultipleNumbers
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int minNumber = 100;
            int maxNumber = 999;
            int multipleNumberCount = 0;

            Random random = new Random();
            int randomNumber = random.Next(1, 28);

            for (int i = minNumber; i <= maxNumber; i++)
            {
                for (int multipleNumberSum = randomNumber; multipleNumberSum <= i; multipleNumberSum += randomNumber)
                {
                    if (multipleNumberSum == i)
                    {
                        multipleNumberCount++;
                    }
                }
            }
            Console.WriteLine($"Сумма трёхзначных чисел кратных {randomNumber} равняется {multipleNumberCount}");
        }
    }
}
